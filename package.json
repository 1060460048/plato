{
  "name": "plat",
  "version": "1.0.0",
  "description": "A plat<del>form</del> built with koa and vue",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "debug": "better-npm-run debug",
    "unit": "better-npm-run unit",
    "unit:dev": "npm run unit -- --watch",
    "e2e": "better-npm-run e2e",
    "test": "npm run unit && npm run e2e",
    "lint": "eslint --max-warnings 10 .",
    "lint:fix": "npm run lint -- --fix",
    "clean": "better-npm-run clean",
    "compile": "better-npm-run compile",
    "deploy": "better-npm-run deploy"
  },
  "betterScripts": {
    "compile": {
      "command": "node .tools/bin/compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "koa*"
      }
    },
    "start": {
      "command": "nodemon --harmony .tools/bin/start",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "koa*"
      }
    },
    "dev": {
      "command": "nodemon --harmony .tools/bin/start",
      "env": {
        "DEBUG": "koa*"
      }
    },
    "debug": {
      "command": "nodemon --harmony --debug .tools/bin/start",
      "env": {
        "DEBUG": "koa*"
      }
    },
    "clean": {
      "command": "node .tools/bin/clean",
      "env": {
        "DEBUG": "koa*"
      }
    },
    "deploy": {
      "command": "npm run lint && npm run clean && npm run compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "koa*"
      }
    },
    "unit": {
      "command": "node --harmony .tools/bin/unit",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "koa*"
      }
    },
    "e2e": {
      "command": "node --harmony .tools/bin/e2e",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "koa*"
      }
    }
  },
  "dependencies": {
    "koa": "^2.0.0",
    "koa-bearer-token": "^0.1.2",
    "koa-bodyparser": "^3.0.0",
    "koa-compress": "^2.0.0",
    "koa-conditional-get": "^2.0.0",
    "koa-connect-history-api-fallback": "^0.3.0",
    "koa-csrf": "^2.4.0",
    "koa-error": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-favicon": "^1.2.1",
    "koa-generic-session": "^1.10.2",
    "koa-generic-session-mongo": "^0.2.5",
    "koa-logger": "^2.0.0",
    "koa-passport": "^2.1.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "mongoose": "^4.4.12",
    "only": "0.0.2",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "vue": "^1.0.20",
    "vue-router": "^0.7.11",
    "vue-validator": "^2.0.2",
    "vuex": "^0.6.2",
    "whatwg-fetch": "^0.11.0"
  },
